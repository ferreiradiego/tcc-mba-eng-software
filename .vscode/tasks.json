// tasks.json para rodar todos os microservi√ßos em terminais integrados do VS Code
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "dev:auth-service",
      "type": "shell",
      "command": "npm run dev",
      "options": { "cwd": "${workspaceFolder}/api/microservices/auth-service" },
      "problemMatcher": []
    },
    {
      "label": "dev:scrum-service",
      "type": "shell",
      "command": "npm run dev",
      "options": { "cwd": "${workspaceFolder}/api/microservices/scrum-service" },
      "problemMatcher": []
    },
    {
      "label": "dev:report-service",
      "type": "shell",
      "command": "npm run dev",
      "options": { "cwd": "${workspaceFolder}/api/microservices/report-service" },
      "problemMatcher": []
    },
    {
      "label": "dev:gateway",
      "type": "shell",
      "command": "npm run dev",
      "options": { "cwd": "${workspaceFolder}/api/microservices/gateway" },
      "problemMatcher": []
    },
    {
      "label": "dev:api",
      "dependsOn": [
        "dev:auth-service",
        "dev:scrum-service",
        "dev:report-service",
        "dev:gateway"
      ],
      "dependsOrder": "parallel"
    },
    {
      "label": "dev:web",
      "type": "shell",
      "command": "npm run dev",
      "options": { "cwd": "${workspaceFolder}/web" },
      "problemMatcher": []
    },
    {
      "label": "dev:all",
      "dependsOn": [
        "dev:api",
        "dev:web"
      ],
      "dependsOrder": "parallel",
    }
  ]
}
