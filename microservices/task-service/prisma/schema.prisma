generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id          String   @id @default(uuid())
  userId      String
  title       String
  description String?
  status      String   // todo, in_progress, done
  priority    String   // low, medium, high
  category    String?
  dueDate     DateTime?
  dependencies String[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
